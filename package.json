{
  "name": "calculadora-eco-trip",
  "version": "1.0.0",
  "description": "Simulador de impacto ambiental para viagens",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "serve": "python -m http.server 8000"
  },
  "keywords": [
    "co2",
    "emissions",
    "transport",
    "environment",
    "calculator"
  ],
  "author": "Udinei Silva",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/test-setup-fixed.js"],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/routes-data.js"
    ]
  }
}
